# Configuración de la Base de Datos PostgreSQL
# Copiar este archivo a .env y modificar según necesidades

# Configuración de PostgreSQL
POSTGRES_DB=ticket_analytics
POSTGRES_USER=ticket_user
POSTGRES_PASSWORD=ticket_password
POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C

# Configuración de PgAdmin
PGADMIN_DEFAULT_EMAIL=admin@ticketanalytics.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_CONFIG_SERVER_MODE=False

# Configuración de puertos
POSTGRES_PORT=5432
PGADMIN_PORT=8080

# Configuración de volúmenes
POSTGRES_DATA_VOLUME=postgres_data
PGADMIN_DATA_VOLUME=pgadmin_data

# Configuración de red
NETWORK_NAME=ticket_network

# Configuración de logs
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Configuración de backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Diario a las 2:00 AM
BACKUP_RETENTION_DAYS=7

# Configuración de seguridad
ENABLE_SSL=false
SSL_CERT_FILE=
SSL_KEY_FILE=

# Configuración de rendimiento
MAX_CONNECTIONS=100
SHARED_BUFFERS=256MB
EFFECTIVE_CACHE_SIZE=1GB
WORK_MEM=4MB
MAINTENANCE_WORK_MEM=64MB 